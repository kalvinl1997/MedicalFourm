@model IEnumerable<MedicalFourm.Models.Question>

@{
    ViewBag.Title = "Index";
}


<div id="result">

    <p>
        @Html.ActionLink("Post A Question", "Create",null,new {@class="btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                Username
            </th>
            <th>
                Question
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedOn)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    <p>@item.Usr.username</p>
                </td>
                <td>
                  
                    @if (item.Qstatment.Length >= 30)
                    {
                        <p>  @item.Qstatment.Substring(0, Math.Min(item.Qstatment.Length, 30))</p>
                    }
                    else
                    {
                        <p> @item.Qstatment</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishedOn)
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id },htmlAttributes: new { @class="btn btn-success"}) |
                    @Html.ActionLink("View", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-primary" }) |
               <a href="~/Questions/Delete/@item.Id" class="btn btn-danger" data-ajax="#result">Delete</a>
                </td>
            </tr>
}

    </table>



</div>