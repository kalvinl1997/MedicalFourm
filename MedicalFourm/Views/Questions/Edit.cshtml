@model MedicalFourm.Models.Question

@{
    ViewBag.Title = "Edit";
}


        @using (Html.BeginForm())
        {
            @*@Html.AntiForgeryToken()*@

            <div class="form-horizontal">
                <h4>Edit Your Question</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PublishedOn)
                @Html.HiddenFor(model => model.LastUpdated)
                @Html.HiddenFor(model => model.UserId)

                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <textarea cols="20" data-val="true" data-val-required="The Qstatment field is required." class="form-control" placeholder="Please Add Question" id="Qstatment" name="Qstatment" rows="10">@Model.Qstatment</textarea>

                        @*@Html.TextAreaFor(model => model.Qstatment, new { htmlAttributes = new { @class = "form-control" , cols="100", rows="10", placeholder="Please Add Question" } })*@
                        @Html.ValidationMessageFor(model => model.Qstatment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-10 col-md-2">
                        <input type="submit" value="Update" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-success" })
        </div>

