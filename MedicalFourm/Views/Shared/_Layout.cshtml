

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Medical Fourm @ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/responsive-slider.css" rel="stylesheet" />
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
   
    <!-- =======================================================
        Theme Name: Resi
        Theme URL: https://bootstrapmade.com/resi-free-bootstrap-html-template/
        Author: BootstrapMade
        Author URL: https://bootstrapmade.com
    ======================================================= -->
</head>
<body>
    <header>
     
        <div class="container">
            <div class="row">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <div class="navbar-brand">
                                <a href="~/Home/Index"><h1>Medical Fourm</h1></a>
                            </div>
                        </div>
                        <div class="menu">
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active"><a href="~/Home/Index">Home</a></li>
                                <li role="presentation"><a href='~/Questions/Create'>Post A Question</a></li>
                                @if (Request.IsAuthenticated)
                                {

                                    <li role="presentation">
                                        <a href="/Questions/Index">My Questions</a>
                                    </li>
                                    <li role="presentation">
                                        <a href="/Questions/ShowAnswer">My Answers</a>
                                    </li>
                                     <li role="presentation">
                                        <a href="/Account/EditProfile"> My Profile</a>
                                    </li>

                                    <li role="presentation">
                                        <a href="@Url.Action("logout", "Account")">Log Out</a>
                                    </li>
                                }
                                else
                                {
                                    <li role="presentation"><a href="~/Account/Login">Login</a></li>
                                    <li role="presentation"><a href="~/Account/Register">Registration</a></li>
                                }
                               
                               
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>

   

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="page-header">

                    @RenderBody()
              </div>
            </div>




            <div class="col-md-4">
                <form class="form-search" action="~/Home/Index">
                    <input class="form-control" type="text" name="search" placeholder="Search..">
                </form>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Recents Questions</strong>
                    </div>
                  @{ Html.RenderPartial("RecentQuestions");
                      }
                   
                </div>
            </div>
        </div>
    </div>



    <hr>

    <!--start footer-->
    <footer>
    

        <div class="sub-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="social-network">
                            <li><a href="#" data-placement="top" title="Facebook"><i class="fa fa-facebook fa-1x"></i></a></li>
                            <li><a href="#" data-placement="top" title="Twitter"><i class="fa fa-twitter fa-1x"></i></a></li>
                            <li><a href="#" data-placement="top" title="Linkedin"><i class="fa fa-linkedin fa-1x"></i></a></li>
                            <li><a href="#" data-placement="top" title="Pinterest"><i class="fa fa-pinterest fa-1x"></i></a></li>
                            <li><a href="#" data-placement="top" title="Google plus"><i class="fa fa-google-plus fa-1x"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-12">
                        <div class="copyright">
                            <p>&copy; All right reserved.</p>
                      
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </footer>
    <!--end footer-->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Content/js/jquery-2.1.1.min.js"></script>
   
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/responsive-slider.js"></script>
    <script src="~/Content/js/wow.min.js"></script>
  
    <script>wow = new WOW({}).init();</script>
    <script src="~/Scripts/data-ajax.js"></script>
</body>
</html>